{
  "name": "multiplayernow",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server.js",
    "watch": "nodemon -e js",
    "build": "npm run build:css",
    "build:css": "node-sass src/stylesheets/style.scss -o build/ && postcss -u autoprefixer -u cssnano -r build/*.css",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "test": "cross-env NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha",
    "watch:test": "cross-env NODE_ENV=test nodemon -x \"node_modules/mocha/bin/_mocha || true\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "main": "server.js",
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-underscore-dangle": 0
    }
  },
  "dependencies": {
    "express": "^4.14.0",
    "moment": "^2.17.0",
    "mongodb": "^2.2.11",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2",
    "pug": "^2.0.0-beta6"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "cross-env": "^3.1.3",
    "cssnano": "^3.8.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.7.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "supertest": "^2.0.1"
  }
}
